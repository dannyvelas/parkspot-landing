---
import Layout from "../layouts/Layout.astro";
import { Image } from "@astrojs/image/components";
import logoImg from "../images/parkspot-logo.png";
import carImg from "../images/car-circle.png";
---

<Layout title="Welcome to ParkSpot.">
  <nav class="mx-12">
    <div class="grid grid-cols-3 items-center">
      <Image src={logoImg} width={200} alt="ParkSpot logo" />
      <div class="text-center">
        <a href="#features">Features</a>
        <a href="#about">About</a>
        <a href="#testimonials">Testimonials</a>
      </div>
      <div class="text-right">
        <a href="https://app.park-spot.co/login">Login</a>
      </div>
    </div>
  </nav>
  <main>
    <div class="hero-bg">
      <div class="md:grid md:grid-cols-2">
        <div
          class="flex flex-col gap-4 text-white items-start ml-12 sm:mr-12 sm:py-8 md:py-24"
        >
          <h1 class="text-4xl">
            Reclaim Your Parking Rights With Our Simple &amp; Easy-To-Use App
          </h1>
          <div>
            <h2 class="text-2xl">Welcome to Parkspot!</h2>
            <p>
              A modern application to ensure that you and your visitors always
              have a parking spot in your residential community!
            </p>
          </div>
          <button>Contact us now!</button>
        </div>
        <div class="md:relative md:overflow-hidden">
          <Image
            src={carImg}
            alt="Hero car"
            class="sm:h-72 sm:object-contain md:absolute md:object-cover md:object-left md:inset-0 md:m-auto md:h-fit lg:h-full"
          />
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .hero-bg {
    background: radial-gradient(
        circle,
        rgba(255, 255, 255, 0) 0%,
        rgba(19, 211, 128, 1) 32%,
        rgba(3, 170, 96, 1) 100%
      ),
      linear-gradient(
        45deg,
        rgba(255, 255, 255, 0) 40%,
        rgba(16, 255, 152, 1) 50%,
        rgba(255, 255, 255, 0) 58%
      );
  }
</style>
