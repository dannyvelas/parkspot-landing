---
import Layout from "../layouts/Layout.astro";
import { Image } from "@astrojs/image/components";
import logoImg from "../images/parkspot-logo.png";
import carImg from "../images/car-circle.png";
---

<Layout title="Welcome to ParkSpot.">
  <nav class="relative">
    <div class="mx-4 py-4 absolute left-0 right-0 sm:z-10 md:mx-12 lg:mx-24">
      <div class="grid grid-cols-3 items-center">
        <Image src={logoImg} width={150} alt="ParkSpot logo" />
        <div class="flex flex-row justify-between text-center text-white">
          <a href="#features">Features</a>
          <a href="#about">About</a>
          <a href="#testimonials">Testimonials</a>
        </div>
        <div class="text-right text-white">
          <a href="https://app.park-spot.co/login">Login</a>
        </div>
      </div>
    </div>
  </nav>
  <main>
    <div class="hero-bg sm:grid sm:grid-cols-2 h-screen items-center">
      <div
        class="flex flex-col gap-4 text-white items-left mx-4 py-8 sm:items-start md:mx-12 lg:ml-24 lg:mr-12"
      >
        <h1 class="text-xl text-center font-bold sm:text-6xl sm:text-left">
          Reclaim Your Parking Rights With ParkSpot
        </h1>
        <div>
          <p class="text-center sm:text-left">
            ParkSpot guarantees that you and your visitors will have a parking
            spot in your community!
          </p>
        </div>
        <button>Contact us now!</button>
      </div>
      <Image src={carImg} alt="Hero car" class="h-72 object-contain sm:h-fit" />
    </div>
  </main>
</Layout>

<style>
  .hero-bg {
    background-image: radial-gradient(
        circle,
        rgba(255, 255, 255, 0) 0%,
        rgba(19, 211, 128, 1) 32%,
        rgba(3, 170, 96, 1) 100%
      ),
      url("../images/parkspot-emblem.png");
    background-position: center, center;
    background-size: auto, 10px;
  }
</style>
