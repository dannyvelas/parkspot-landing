---
import Layout from "../layouts/Layout.astro";
import { Image } from "@astrojs/image/components";
import logoImg from "../images/parkspot-logo.png";
import carImg from "../images/car-circle.png";
---

<Layout title="Welcome to ParkSpot.">
  <nav class="mx-12">
    <div class="grid grid-cols-3 items-center">
      <Image src={logoImg} width={200} alt="ParkSpot logo" />
      <div class="text-center">
        <a href="#features">Features</a>
        <a href="#about">About</a>
        <a href="#testimonials">Testimonials</a>
      </div>
      <div class="text-right">
        <a href="https://app.park-spot.co/login">Login</a>
      </div>
    </div>
  </nav>
  <main>
    <div class="hero-bg">
      <div class="sm:grid sm:grid-cols-2">
        <div
          class="flex flex-col gap-4 text-white items-left ml-12 mr-12 py-8 sm:py-24 sm:items-start"
        >
          <h1 class="text-xl text-center font-bold sm:text-4xl sm:text-left">
            Reclaim Your Parking Rights With ParkSpot
          </h1>
          <div>
            <p class="text-center sm:text-left">
              ParkSpot guarantees that you and your visitors will have a parking
              spot in your community!
            </p>
          </div>
          <button>Contact us now!</button>
        </div>
        <div class="sm:relative sm:overflow-hidden">
          <Image
            src={carImg}
            alt="Hero car"
            class="h-72 object-contain sm:absolute sm:object-cover sm:object-left sm:inset-0 sm:m-auto sm:h-fit lg:h-full"
          />
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .hero-bg {
    background: radial-gradient(
        circle,
        rgba(255, 255, 255, 0) 0%,
        rgba(19, 211, 128, 1) 32%,
        rgba(3, 170, 96, 1) 100%
      ),
      linear-gradient(
        45deg,
        rgba(255, 255, 255, 0) 40%,
        rgba(16, 255, 152, 1) 50%,
        rgba(255, 255, 255, 0) 58%
      );
  }
</style>
