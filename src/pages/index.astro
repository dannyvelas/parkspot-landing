---
import Layout from "../layouts/Layout.astro";
import { Image } from "@astrojs/image/components";
import logoImg from "../images/parkspot-logo.png";
import carImg from "../images/car-circle.png";
---

<Layout title="Welcome to ParkSpot.">
  <nav class="relative">
    <div class="mx-4 py-4 absolute left-0 right-0 sm:z-10 md:mx-12 lg:mx-24">
      <div class="grid items-center grid-cols-2 sm:grid-cols-3">
        <a href="/">
          <img src={logoImg.src} class="h-auto w-28" alt="ParkSpot Logo" />
        </a>
        <div class="hidden sm:block sm:flex sm:flex-row sm:justify-center">
          <div
            class="justify-between flex flex-row text-white w-80"
          >
            <a href="#features">Features</a>
            <a href="#about">About</a>
            <a href="#testimonials">Testimonials</a>
          </div>
        </div>
        <div class="text-right text-white">
          <a href="https://app.park-spot.co/login">Login</a>
        </div>
      </div>
    </div>
  </nav>
  <main>
    <div class="hero-bg sm:flex sm:flex-row sm:justify-center">
      <div class="sm:grid sm:grid-cols-2 sm:items-center sm:max-w-7xl">
        <div
          class="flex flex-col gap-4 text-white pl-4 pt-20 sm:items-start sm:pt-36 sm:pb-32 md:pl-12 lg:pl-24 xl:pl-0"
        >
          <h1 class="text-xl text-center font-bold sm:text-6xl sm:text-left">
            Reclaim Your Parking Rights With ParkSpot
          </h1>
          <div>
            <p class="text-center sm:text-left">
              ParkSpot guarantees that you and your visitors will have a parking
              spot in your community!
            </p>
          </div>
          <button>Contact us now!</button>
        </div>
        <div class="flex flex-row justify-center">
          <img
            src={carImg.src}
            alt="Hero car"
            class="h-72 object-contain sm:object-cover sm:h-full"
          />
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .hero-bg {
    background-image: radial-gradient(
        circle,
        rgba(255, 255, 255, 0) 0%,
        rgba(19, 211, 128, 1) 32%,
        rgba(3, 170, 96, 1) 100%
      ),
      url("../images/parkspot-emblem.png");
    background-position: center, center;
    background-size: auto, 10px;
  }
</style>
